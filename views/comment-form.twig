<form class="form form--comment" action="{{site.site_url~'/wp-comments-post.php'}}" method="post">
	<input type="hidden" name="comment_post_ID" value="{{post.id}}">
	<input type="hidden" name="comment_parent" value="{{comment.ID|default('0')}}">
	<label class="form__label" for="email">Email</label>
	<input placeholder="Votre email" class="form__input" type="email" id="email" name="email" required>
	<label class="form__label" for="author">Nom</label>
	<input placeholder="Votre nom" class="form__input" type="text" id="author" name="author" required>
	<label class="form__label" for="comment">Laisser un commentaire</label>
	<textarea placeholder="Commenter ..." class="form__input" name="comment" id="comment" name="comment" cols="30" rows="10" required></textarea>
	<input class="btn btn--gradient-blue" type="submit" value="Envoyer" name="Submit">
</form>
